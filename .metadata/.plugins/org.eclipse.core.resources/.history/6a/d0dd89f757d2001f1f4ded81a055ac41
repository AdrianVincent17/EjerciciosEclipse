package arrays;

import java.util.Scanner;

public class Ejemplo06 {
	
	final static int TAM=5;
	
	
	/**
	 * funcion que devuelve el mayor valor almacenado en un array de enteros
	 * @param vector - array de numeros enteros 
	 * @return numero entero(el mayor valor almacenado en el array)
	 */
	
	public static int mayor(int [] vector) {
		int m = vector[0];
		
		
		for(int i=1; i<vector.length; i++) 
			
			if(m<vector[i])
				m=vector[i];
			
			return m;	
	}
	
	/**
	 * funcion que devuelve el menor valor almacenado en un array de enteros
	 * @param vector - array de numeros enteros 
	 * @return numero entero(el menor valor almacenado en el array)
	 */
	
	public static int menor(int [] vector) {
		int m = vector[0];
		
		
		for(int i=1; i<vector.length; i++) 
			
			if(m>vector[i])
				m=vector[i];
			
			return m;	
	}
	
	public static int media() {
		int[] array = null;
		int media=0;
		
	for(int i=1; i<array.length; i++) {
			
			media+=array[i];
		}
	
		return media/array.length;
		
	}

	public static void main(String[] args) {
		
		Scanner teclado=new Scanner(System.in);
		
		try {
			
			int[] vector=new int[TAM];
			
			System.out.println("Introduce "+TAM+" valores de tipo entero...");
			
			for(int i=0; i<vector.length; i++) {
				System.out.print("["+(i+1)+"] Dime un valor: ");
				vector[i]=teclado.nextInt();
			}
			
			
			//Mostramos el mayor valor introducido
			int mayor,menor;
			mayor=menor=vector[0];
			for(int i=1; i<vector.length; i++) {
				
				if(mayor<vector[i])
					mayor=vector[i];
				
				if(menor>vector[i])
					menor=vector[i];
				
			}	
			
			System.out.println("\n> Mayor: "+mayor+"\n> Menor: "+menor);
			
			
			
		}catch(Exception lupita) {
			System.out.println("Error, dato no valido");
			
		}finally {
			teclado.close();	
		}

	}

}
