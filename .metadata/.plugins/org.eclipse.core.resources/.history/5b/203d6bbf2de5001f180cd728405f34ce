package strings.ejercicios;

import java.util.Scanner;

public class Ejercicio02 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		//1. Pedimos al usuario que introduzca una cadena de caracteres
		
		System.out.print("Introduce una palabra: ");
		String cad=sc.nextLine();
		sc.close();
		
		//2.  convertimos la cadena a StringBuffer
		
		StringBuffer espejo= new StringBuffer(cad);
		
		espejo=espejo.append(espejo.reverse());
		
		
		System.out.println(espejo);		
		

	}

}
